/dts-v1/;
#include "sun50i-h5.dtsi"

#include <dt-bindings/gpio/gpio.h>

&fixed_clock {
	ac108_mclk: codec-mclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <24000000>;
	};
};

/ {
	model = "GinPot H5";
	compatible = "ginpot,h5", "allwinner,sun50i-h5";

	aliases {
		ethernet0 = &emac;
		serial0 = &uart0;
		i2c0 = &i2c0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";

		pwr {
			label = "nanopi:green:pwr";
			gpios = <&r_pio 0 10 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		status {
			label = "nanopi:blue:status";
			gpios = <&pio 0 10 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
		};
	};

	reg_gmac_3v3: gmac-3v3 {
		compatible = "regulator-fixed";
		regulator-name = "gmac-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		startup-delay-us = <100000>;
		enable-active-high;
		gpio = <&pio 3 6 GPIO_ACTIVE_HIGH>;
	};

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	reg_usb0_vbus: usb0-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb0-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		enable-active-high;
		gpio = <&r_pio 0 2 GPIO_ACTIVE_HIGH>; /* PL2 */
		status = "okay";
	};
	
	/********************hdmi display driver*****************/
    connector {
        compatible = "hdmi-connector";
        type = "a";

        port {
            hdmi_con_in: endpoint {
                remote-endpoint = <&hdmi_out_con>;
            };
        };
    };
	
	/********************WM8978 driver*****************/
    sound_i2s {
        compatible = "simple-audio-card";
        simple-audio-card,name = "WM8978";
        simple-audio-card,mclk-fs = <256>;
        simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&cpudia>;
		simple-audio-card,frame-master = <&cpudia>;
        status = "disabled";

        cpudia: simple-audio-card,cpu {
            sound-dai = <&i2s0>;
        };

        simple-audio-card,codec {
            sound-dai = <&wm8978>;
        };
    };

	/********************AC108 driver*****************/
	sound_ac108 {
		compatible = "simple-audio-card";
		simple-audio-card,name = "ac108-card";
		simple-audio-card,format = "dsp_a";
		simple-audio-card,mclk-fs = <512>;
		

		simple-audio-card,bitclock-master = <&cpu_dai>;
		simple-audio-card,frame-master = <&cpu_dai>;
		simple-audio-card,channels-playback-override = <4>;
		simple-audio-card,channels-capture-override  = <4>;

		status = "okay";

		cpu_dai: simple-audio-card,cpu {
			sound-dai = <&i2s0>;
			dai-tdm-slot-num     = <4>;
			dai-tdm-slot-width   = <32>;
			dai-tdm-slot-tx-mask = <1 1 1 1>;
			dai-tdm-slot-rx-mask = <1 1 1 1>;
		};
		codec_dai: simple-audio-card,codec {
			sound-dai = <&ac108>;
			clocks =  <&ac108_mclk>;
		};
	};
};

&ehci0 {
	status = "okay";
};

&ehci3 {
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-supply = <&reg_gmac_3v3>;
	phy-handle = <&ext_rgmii_phy>;
	phy-mode = "rgmii";
	status = "okay";
};

&external_mdio {
	ext_rgmii_phy: ethernet-phy@7 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <7>;
	};
};

&mmc0 {
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&ohci3 {
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pa_pins>;
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	/* USB Type-A port's VBUS is always on */
	usb0_id_det-gpios = <&pio 6 12 GPIO_ACTIVE_HIGH>; /* PG12 */
	usb0_vbus-supply = <&reg_usb0_vbus>;
	status = "okay";
};

/********************hdmi display driver*****************/
&mixer0 {
    status = "okay";
};
&tcon0 {
    status = "okay";
};
&hdmi {
    status = "okay";
};
&de {
    status = "okay";
};
&hdmi_out {
    hdmi_out_con: endpoint {
        remote-endpoint = <&hdmi_con_in>;
    };
};

/********************h5 audio driver*****************/
&codec {
	allwinner,audio-routing = 
		"Line Out", "LINEOUT",
		"MIC1", "Mic",
		"Mic",  "MBIAS";
	status = "disabled";
};

/********************WM8978 driver*****************/
&pio {
	i2s0_pins: i2s0 {
		pins = "PA18", "PA19", "PA20", "PA21";
		function = "i2s0";
	};
};
&i2c0 {
    status = "okay";
    wm8978: wm8978@1a {
        compatible = "wlf,wm8978";
        reg = <0x1a>;
		#sound-dai-cells = <0>;
		status = "disabled";
    };

	ac108: ac108@3b{
		compatible = "x-power,ac108";
		reg = <0x3b>;
		#sound-dai-cells = <0>;
		data-protocol = <0>;
	};
};
&i2s0 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&i2s0_pins>;
 	#address-cells = <1>;
 	#size-cells = <0>;
    status = "okay";
};



